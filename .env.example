# ChromaDB Configuration
RAG_CHROMA_PERSIST_DIR=./data/chroma
RAG_CHROMA_COLLECTION_NAME=documents

# ChromaDB Mode: "persistent" (local SQLite) or "http" (remote server)
RAG_CHROMA_MODE=persistent

# ChromaDB HTTP Server Settings (only used when mode=http)
RAG_CHROMA_SERVER_HOST=localhost
RAG_CHROMA_SERVER_PORT=8000
RAG_CHROMA_SERVER_SSL=false
RAG_CHROMA_SERVER_API_KEY=

# Embedding Configuration
# Model identifier from HuggingFace (used for download, then loads from ./models/)
RAG_EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
RAG_EMBEDDING_BATCH_SIZE=32

# Chunking Configuration
RAG_CHUNKING_METHOD=hybrid
RAG_MAX_TOKENS=512

# Document Processing
RAG_ENABLE_OCR=true
RAG_ENABLE_ASR=true
RAG_OCR_LANGUAGES=eng+ara

# Retrieval Configuration
RAG_DEFAULT_TOP_K=5

# MCP Server Configuration
RAG_MCP_SERVER_NAME=docling-rag
RAG_MCP_TRANSPORT=streamable-http        # Transport protocol
RAG_MCP_HOST=127.0.0.1                   # Server host
RAG_MCP_PORT=8080                        # Server port
RAG_MCP_ENABLE_CLEANUP=true              # Enable resource cleanup on shutdown

# MCP Instructions (shown to clients)
RAG_MCP_INSTRUCTIONS="You are a RAG (Retrieval-Augmented Generation) assistant with access to indexed documents. Use query_rag to retrieve relevant context and list_all_documents to browse available documents."

# MCP Tool Descriptions (override defaults if needed)
# RAG_MCP_TOOL_QUERY_DESCRIPTION="Query the RAG system to retrieve relevant document chunks based on semantic similarity. Returns ranked chunks with scores and metadata that can be used as context for answering questions."
# RAG_MCP_TOOL_LIST_DOCS_DESCRIPTION="List all indexed documents with metadata including file paths, document types, languages, chunk counts, and ingestion timestamps. Supports pagination for large document collections."

# Language Detection
RAG_LANGUAGE_DETECTION_ENABLED=true

# Models Configuration
RAG_MODELS_DIR=./models

# Performance
# IMPORTANT: This system is configured for CPU-only operation
# GPU/CUDA support is explicitly disabled in the codebase
# All processing (embeddings, OCR, document conversion) uses CPU
RAG_DEVICE=cpu
RAG_LOG_LEVEL=INFO
